# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
# prefix must match `play.assets.urlPrefix`
GET /assets/*file           controllers.Assets.at(file)
GET /versionedAssets/*file  controllers.Assets.versioned(file)

# An example controller showing a sample home page
GET     /                           controllers.SessionController.index

POST    /login                      controllers.SessionController.login()

GET     /hello                      controllers.HomeController.hello

GET     /db                         controllers.HomeController.newHeadquarter()

GET     /agent                      controllers.AgentController.listSocios()

GET     /listUsers                  controllers.UserController.listUsers()

GET     /renderEditUser             controllers.UserController.renderEditUser(userId : Integer)

GET     /renderAddUser              controllers.UserController.renderAddUser()

POST    /editUser                   controllers.UserController.editUser(userId : Integer)

POST    /addUser                    controllers.UserController.addUser()

GET     /listRegistros              controllers.RegistroEconomicoController.listRegistrosEconomicos()

GET     /renderAddRegistro          controllers.RegistroEconomicoController.renderAddRegistro()

POST    /addRegistro                controllers.RegistroEconomicoController.addRegistro(proyecto : Integer)

GET     /listAlumnos                controllers.AlumnoController.listAlumnos()

GET     /renderAddAlumno            controllers.AlumnoController.renderAddAlumno()

POST    /addAlumno                  controllers.AlumnoController.addAlumno()

GET     /listSocios                 controllers.SocioController.listSocios()

GET     /renderAddSocio             controllers.SocioController.renderAddSocio()

POST    /addSocio                   controllers.SocioController.addSocio()